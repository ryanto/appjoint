{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@appjoint/utils": ["packages/utils/src"],
      "@appjoint/react": ["packages/react/src"],
      "@appjoint/apollo": ["packages/apollo/src"],
      "$test/*": ["test/*"]
    }
  }
}
